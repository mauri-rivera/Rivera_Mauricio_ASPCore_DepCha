@model User

@{
    ViewData["Title"] = "Login Page";
}

<div class="text-center">
    <h1>Welcome! Tell us a little about yourself before we get started.</h1>
    <!-- Error al nombrar 'MakeUser' en vez de CreateUser al enviar al formulario donde se crea el usuario -->
    <!-- <form asp-action="MakeUser" asp-controller="Home" method="post" class="col-4 mx-auto p-4"> -->
        <!-- La solución es: -->
    <form asp-action="CreateUser" asp-controller="Home" method="post" class="col-4 mx-auto p-4">
        <div class="mb-3">
            <label for="Name">What is your name?</label>
            <input asp-for="Name" class="form-control">
            <!-- Faltó la validación del nombre de usuario, por lo tanto, se incluyó -->
            <span asp-validation-for="Name" style="color:red"></span>
        </div>
        <div class="mb-3">
            <label for="Location">(Optional) Where are you from?</label>
            <input asp-for="Location" class="form-control">
        </div>
        <div class="mb-3">
            <input type="submit" value="Submit" class="btn btn-primary">
        </div>
    </form>
</div>
